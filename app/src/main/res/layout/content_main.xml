<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userProfileButton"
        android:src="@drawable/user"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="52dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calorieCounterButton"
        android:src="@drawable/calories"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/userProfileButton"
        android:layout_toRightOf="@+id/settingsButton"
        android:layout_toEndOf="@+id/settingsButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bmiButton"
        android:src="@drawable/bmi"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/userProfileButton"
        android:layout_alignStart="@+id/userProfileButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipsButton"
        android:src="@drawable/tips"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/bmiButton"
        android:layout_alignLeft="@+id/calorieCounterButton"
        android:layout_alignStart="@+id/calorieCounterButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BMI"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:layout_below="@+id/bmiButton"
        android:layout_alignLeft="@+id/bmiButton"
        android:layout_alignStart="@+id/bmiButton"
        android:layout_toLeftOf="@+id/settingsButton"
        android:layout_toStartOf="@+id/settingsButton"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile"
        android:id="@+id/textView"
        android:layout_below="@+id/userProfileButton"
        android:layout_alignLeft="@+id/userProfileButton"
        android:layout_alignStart="@+id/userProfileButton"
        android:textColor="#ffffff"
        android:layout_toLeftOf="@+id/settingsButton"
        android:layout_toStartOf="@+id/settingsButton"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calories"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/calorieCounterButton"
        android:layout_alignStart="@+id/calorieCounterButton"
        android:layout_alignRight="@+id/calorieCounterButton"
        android:layout_alignEnd="@+id/calorieCounterButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tips"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/tipsButton"
        android:layout_alignStart="@+id/tipsButton"
        android:textColor="#ffffff"
        android:layout_alignRight="@+id/tipsButton"
        android:layout_alignEnd="@+id/tipsButton"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/settingsButton"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

</RelativeLayout>
